
<h1>NASA: Image Of The Day</h1>

<% if(!user){ %>
<div class="registerForm">
    <h2>Register</h2>
    <form action="/register" method="POST">
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">@</span>
            <input type="text" class="form-control" name="userName" placeholder="userName here" aria-label="Username" aria-describedby="addon-wrapping">
        </div>
        <p class="required">Required ^</p>

        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">Password</span>
            <input type="text" class="form-control" name="password" placeholder="password here" aria-describedby="addon-wrapping">
        </div>
        <p class="required">Required ^</p>

        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% } %> 
<% if(!user){ %>
<div class="loginForm">
    <h2>Login</h2>
    <form action="/login" method="POST">
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">@</span>
            <input type="text" class="form-control" name="userName" placeholder="userName here" aria-label="Username" aria-describedby="addon-wrapping">
        </div>
        <p class="required">Required ^</p>

        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">Password</span>
            <input type="text" class="form-control" name="password" placeholder="password here" aria-describedby="addon-wrapping">
        </div>
        <p class="required">Required ^</p>

        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% } %> 

<% if(user){ %>
    <div>
        <h1>Hello <%= user.userName %></h1>
        <form action="/logout" method="POST">
            <button type="submit" class="logout-btn">Log Out</button>
        </form>
        <br>
        <img src="<%=data.hdurl %>" />
    </div>
<% } %>  